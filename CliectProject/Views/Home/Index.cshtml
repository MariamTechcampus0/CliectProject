<!-- services section starts   -->

<section class="portfolio" id="portfolio">

    <h1 class="heading"> Offers <span>Services</span> </h1>

    <div class="box-container">
        @foreach (var ss in Model)
        {

            if (ss.Sale == true)
            {


                <div class="box">
                    <span>Sale</span>
                    <img src="@Url.Content(ss.Photo)" alt="">
                    <div class="content">
                        <h3>@ss.Name</h3>
                        <p>@ss.Description</p>
                        <a href="@Url.Action("Order", "Services", new { id = ss.Id })" class="btn" style="text-align:center; width:150px">Order Now</a>
                    </div>
                </div>
            }
        }

    </div>

</section>

